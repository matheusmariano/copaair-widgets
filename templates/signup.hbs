<form class="copaair-signup  copaair-widget  copaair-theme-default">
    <div class="copaair-widget-layout">
        <div class="copaair-widget-layout__item">
            <input class="copaair-form-control"
                   type="text"
                   placeholder="{{ form.fname }}"
                   name="first_name"
                   required>
        </div
        ><div class="copaair-widget-layout__item">
            <input class="copaair-form-control"
                   type="text"
                   placeholder="{{ form.lname }}"
                   name="last_name"
                   required>
        </div
        ><div class="copaair-widget-layout__item">
            <input class="copaair-form-control"
                   type="email"
                   placeholder="{{ form.email }}"
                   name="email"
                   required>
        </div
        ><div class="copaair-widget-layout__item">
            <input class="copaair-widget-submit  copaair-form-control"
                   type="submit"
                   value="{{ form.subscribe }}">
        </div>
    </div>

    <div class="copaair-widget-layout  copaair-hidden  js-copaair-toggle">
        <div class="copaair-widget-layout__item">
             <select class="copaair-signup-select  copaair-form-control  js-selectmenu js-country-selector"
                    id="signup-country-select"
                    data-content="countries" required
                    >
                    <option>{{ form.country }}</option>
            </select>
        </div
        ><div class="copaair-widget-layout__item">
             <select class="copaair-signup-select  copaair-form-control  js-selectmenu js-city-selector"
                    id="signup-city-select"
                    data-content="destinations" required
                    >
                    <option>{{ form.city }}</option>
            </select>
        </div
        ><div class="copaair-widget-layout__item">
            <input class="copaair-form-control  copaair-widget-datepicker  copaair-signup-datepicker-bday js-signup-date" placeholder="{{ form.birthday }}" type="text" required name="dob">
        </div
        ><div class="copaair-widget-layout__item">
        </div>
    </div>
</form>
